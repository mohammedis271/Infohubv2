<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"

    android:elevation="12dp"
    android:orientation="horizontal"
    android:outlineAmbientShadowColor="#000000"
    android:outlineSpotShadowColor="#000000"
    app:cardUseCompatPadding="true">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4sp"
        android:background="?android:selectableItemBackground"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/cast_profile_img"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:src="@mipmap/ic_launcher" />
            <TextView
                android:id="@+id/cast_actual_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/no_content"
                android:textColor="@android:color/black"
                android:layout_below="@+id/cast_profile_img"
                android:layout_centerHorizontal="true"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_margin="2sp"/>
            <TextView
                android:id="@+id/cast_character_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/no_content"
                android:textColor="@color/fbutton_color_wet_asphalt"
                android:layout_below="@+id/cast_actual_name"
                android:layout_margin="2sp"
                android:layout_centerHorizontal="true"
                android:textStyle="bold"
                android:textSize="14sp" />

        </RelativeLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>